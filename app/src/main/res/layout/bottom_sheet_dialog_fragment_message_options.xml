<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/common_big_padding">

    <View
        android:id="@+id/divider"
        android:layout_width="62dp"
        android:layout_height="6dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/common_bg"
        android:backgroundTint="@color/dragger_color" />

    <TextView
        android:id="@+id/textAddReaction"
        style="@style/Widget.App.TextOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_big_margin"
        android:layout_marginTop="@dimen/common_normal_margin"
        android:drawablePadding="@dimen/common_normal_padding"
        android:text="@string/add_reaction"
        app:drawableStartCompat="@drawable/add_reaction_ic" />

    <TextView
        android:id="@+id/textCopyMessage"
        style="@style/Widget.App.TextOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_big_margin"
        android:layout_marginTop="@dimen/common_normal_margin"
        android:drawablePadding="@dimen/common_normal_padding"
        android:paddingHorizontal="@dimen/big_text_size"
        android:text="@string/copy_message"
        app:drawableStartCompat="@drawable/copy_ic" />

</LinearLayout>