<resources>

    <style name="Base.Theme.ZulipClient" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/jungle_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/jungle_green</item>
        <item name="colorSurface">@color/normal_eerie_black</item>
        <item name="colorSurfaceContainer">@color/dark_charcoal</item>
        <item name="colorOnSurface">@color/lotion</item>
        <item name="colorSurfaceBright">@color/black_olive</item>
        <item name="colorSurfaceVariant">@color/light_eerie_black</item>
        <item name="colorSurfaceInverse">@color/charleston_green</item>
        <item name="colorOnSurfaceInverse">@color/chinese_silver</item>

        <item name="fontFamily">@font/inter</item>

        <item name="android:textColor">@color/common_main_text_color</item>

        <item name="dialogCornerRadius">20dp</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>

        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textCursorDrawable">@drawable/cursor</item>

        <item name="android:windowBackground">@color/chinese_black</item>
        <item name="android:navigationBarColor">@color/light_eerie_black</item>

        <item name="emojiViewStyle">@style/EmojiViewStyle</item>

    </style>

    <style name="Theme.ZulipClient" parent="Base.Theme.ZulipClient" />

</resources>